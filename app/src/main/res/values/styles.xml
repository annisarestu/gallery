<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:drawableTint" tools:targetApi="m">@color/textPrimary</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/textPrimary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:tint">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/transparent</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>


</resources>
